<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="New Item"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tab1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <reedemtiles
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="us-bank-loyality/components/content/multifield"
                                        fieldDescription="Click 'Add field' to add a new Reedemption Tile"
                                        required="{Boolean}true"
                                        fieldLabel="Reedem Tiles">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./reedemTilesList">
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <title
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldDescription="Configure Title"
                                                            fieldLabel="Title"
                                                            name="./title"
                                                            required="{Boolean}true"/>
                                                        <subtitle
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                            fieldDescription="Configure Sub Title"
                                                            fieldLabel="Sub Title"
                                                            name="./subTitle"
                                                            required="{Boolean}true"/>
                                                        <ctatext
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldDescription="Configure CTA Text"
                                                            fieldLabel="CTA Text"
                                                            name="./ctaText"
                                                            required="{Boolean}true"/>
                                                        <ctaurl
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldDescription="Configure CTA Url"
                                                            fieldLabel="CTA Url"
                                                            name="./ctaUrl"
                                                            required="{Boolean}true"
                                                            rootPath="/content/us-bank-loyality"/>
                                                        <newwindow
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldDescription="If selected as True, Link will be opened in new window"
                                                            fieldLabel="New Window?"
                                                            name="./newWindow">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <false
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="False"
                                                                    value="false"/>
                                                                <true
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="True"
                                                                    value="true"/>
                                                            </items>
                                                        </newwindow>
                                                        <imagepath
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldDescription="Configure Image Path"
                                                            fieldLabel="Image Path"
                                                            name="./imagePath"
                                                            required="{Boolean}true"
                                                            rootPath="/content/dam"/>
                                                        <imagealttext
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldDescription="Configure Image Alt Text"
                                                            fieldLabel="Image Alt Text"
                                                            name="./imageAltText"
                                                            required="{Boolean}true"/>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </reedemtiles>
                                    <thumbnail
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="us-bank-loyality/components/content/multifield"
                                        fieldDescription="Click 'Add field' to add a new Thumbnail"
                                        required="{Boolean}true"
                                        fieldLabel="Thumbnail List">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./thumbnailItemList">
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <title
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldDescription="Configure Title"
                                                            fieldLabel="Title"
                                                            name="./thumbnailTitle"
                                                            required="{Boolean}true"/>
                                                        <defaultpath
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldDescription="Configure Default Thumbnail"
                                                            fieldLabel="Default Thumbnail Image Path"
                                                            name="./defaultThumbnail"
                                                            required="{Boolean}true"
                                                            rootPath="/content/dam"/>
                                                        <activepath
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldDescription="Configure Active Thumbnail"
                                                            fieldLabel="Active Thumbnail Image Path"
                                                            name="./activeThumbnail"
                                                            required="{Boolean}true"
                                                            rootPath="/content/dam"/>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </thumbnail>
                                </items>
                            </column>
                        </items>
                    </tab1>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
