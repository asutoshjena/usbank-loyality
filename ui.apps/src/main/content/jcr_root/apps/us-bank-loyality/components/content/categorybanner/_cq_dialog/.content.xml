<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
	xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
	jcr:primaryType="nt:unstructured" jcr:title="Banner Component"
	sling:resourceType="cq/gui/components/authoring/dialog">
	<content jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
		<items jcr:primaryType="nt:unstructured">
			<column jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/container">
				<items jcr:primaryType="nt:unstructured">
					<heading jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
						fieldLabel="Hero Title" name="./heading" />
					<searchplaceholder jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
						fieldLabel="Search Placeholder Text" name="./searchplaceholder" />
					<alttext jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
						fieldLabel="Alt Text" name="./alttext" />												
					<desktopimage jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
						fieldDescription="Configure Image" fieldLabel="Desktop Banner Image" name="./desktopimage"
						rootPath="/content/dam/us-bank-loayality" />
					<mobileimage jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
						fieldDescription="Configure Image" fieldLabel="Mobile Banner Image" name="./mobileimage"
						rootPath="/content/dam/us-bank-loayality" />						
				</items>
			</column>
		</items>
	</content>
</jcr:root>
 